@model IEnumerable<RMS.App.ViewModels.AssignRequisitionViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-md-12">
            <p>
                @using (Html.BeginForm("Index", "AssignRequisitions", FormMethod.Get))
                {
                    <b>Search by (Requisition Number)</b>
                    @Html.TextBox("searchByText")
                    <input type="submit" value="Search" />
                }
            </p>

        @*@Html.Partial("~/Views/GatePass/RequisitionIndex.cshtml")*@
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Requisition.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Requisition.RequisitionNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.RegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.VehicleType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Requisition.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Requisition.RequisitionNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle.RegNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle.VehicleType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
