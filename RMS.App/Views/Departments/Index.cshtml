@model IEnumerable<RMS.App.ViewModels.DepartmentViewModel>

@{
    ViewBag.Title = "Index";
}
<br/>
<h2>Department List</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-info">
        @Html.Raw(TempData["msg"])
    </div>
}
<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-4 col-sm-4 col-4 header-top-left no-padding">

            <p>
                @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-default"})
            </p>
        </div>

        <div class="col-lg-8 col-sm-8 col-8 text-right no-padding">
            <p>
                @using (Html.BeginForm("Index", "Departments", FormMethod.Get))
                {

                    <b>Search by (Organization/Department/Code) </b>
                    @Html.TextBox("searchText")
                    <input type="submit" value="Search" />

                }
            </p>

        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-active table-striped">
    <tr>
        <th>
            SL
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>Action</th>
    </tr>
    @{
        var sl = 0;
        if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                sl++;
                <tr>
                    <td>
                        @sl
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Organization.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                        @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td class="text-center text-danger" colspan="5"> Data Not Found!</td>
            </tr>
        }
    }

</table>
