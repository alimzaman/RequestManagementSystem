@model RMS.App.ViewModels.AssignRequisitionViewModel

@{
    ViewBag.Title = "Cancel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cancel</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AssignRequisitionViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            @Html.LabelFor(model => model.RequisitionNumber, "RequisitionNumber", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-5">
                @Html.TextBox("RequisitionNumber", null, htmlAttributes: new {@class = "form-control", @disabled = "disabled"})
                @Html.ValidationMessageFor(model => model.RequisitionNumber, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.RequisitionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">

                @Html.TextBox("RequisitionId", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.RequisitionId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group row">
            @Html.LabelFor(model=>model.RequisitionStatusId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("RequisitionStatusId", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                @Html.ValidationMessage("RequisitionStatusId", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-5">
                <input type="submit" value="Cancel Requist" class="btn btn-warning"/> &nbsp;
                @Html.ActionLink("Back to List", "Requests",null,new {@class="btn btn-info"})
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
