    <table id="example" class="table table-striped table-bordered table-hover" style="width: 100%">
        <thead>
            <tr class="bg-info">
                <th>
                    SL
                </th>
                <th>
                    @Html.DisplayName("Driver Name")
                </th>
                <th>
                    @Html.DisplayName("From Place")
                </th>
                <th>
                    @Html.DisplayName("Vehicle Brand Name")
                </th>
                <th>
                    @Html.DisplayName("Vehicle Reg No")
                </th>

                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
        @{
            var sl = 0;
            if (Model.Count() != 0)
            {
                foreach (var item in Model)
                {
                    sl++;
                    <tr>
                        <td>
                            @sl
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Requisition.FromPlace)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vehicle.BrandName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vehicle.RegNo)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center text-danger" colspan="6"> Data Not Found!</td>
                </tr>
            }
        }
        </tbody>
        <tfoot>
            <tr class="bg-secondary">
                <th>
                    SL
                </th>
                <th>
                    @Html.DisplayName("Driver Name")
                </th>
                <th>
                    @Html.DisplayName("From Place")
                </th>
                <th>
                    @Html.DisplayName("Vehicle Brand Name")
                </th>
                <th>
                    @Html.DisplayName("Vehicle Reg No")
                </th>

                <th>
                    Action
                </th>
            </tr>
        </tfoot>
    </table>
</div>

@section scripts
{

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.semanticui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}
