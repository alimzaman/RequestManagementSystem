@model IEnumerable<RMS.Models.EntityModels.Employee>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-6 col-sm-6 col-4 header-top-left no-padding">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>

        <div class="col-lg-6 col-sm-6 col-8 header-top-right no-padding">
            <input type="text" placeholder="Search" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search () '" />
            <button class="nw-btn primary-btn">Search<span class="lnr lnr-arrow-right"></span></button>
        </div>
    </div>
</div>
<br />

<table class="table">
    <tr>
        <th>
            Department Name
        </th>
        <th>
            Designation
        </th>
        <th>
            Organization
        </th>
        <th>
            Full Name
        </th>
        <th>
            Email
        </th>
        <th>
            Contact No
        </th>
        <th>
            National Identity No
        </th>
        <th>
            Blood Group
        </th>
        <th>
            House No
        </th>
        <th>
            Road No
        </th>
        <th>
            Floor No
        </th>
        <th>
            Post Office
        </th>
        <th>
            District
        </th>
        <th>
            Division
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Organization.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BloodGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HouseNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoadNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FloorNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostOffice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Division)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
