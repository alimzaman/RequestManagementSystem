@section scripts{
    <script>
        $(document).ready(function () {
            $("#test1").click(function () {
                var url = "/Organizations/Create";

                // this will call the action through ajax and update the container with the
                // partial view's html.
                $("#organizationCreateLoad").load(url);
            });
        });
    </script>
