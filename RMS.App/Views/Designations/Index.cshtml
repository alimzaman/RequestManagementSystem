@model IEnumerable<RMS.App.ViewModels.DesignationViewModel>

@{
    ViewBag.Title = "Designation List";
}

<div class="container" style="min-height: 400px">
    <h2>Designation List</h2>
    <hr />

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info">
            @Html.Raw(TempData["msg"])
        </div>
    }
<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-6 col-sm-6 col-4 header-top-left no-padding">
            <p>
                @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-default"})
            </p>
        </div>

        <div class="col-lg-6 col-sm-6 col-8 text-right no-padding">
            <p>
                @using (Html.BeginForm("Index", "Designations", FormMethod.Get))
                {
                    <b>Search by (Title)</b>
                    @Html.TextBox("searchText")
                    <input type="submit" value="Search"/>
                }
            </p>
        </div>
    </div>
</div>

    <table class="table table-bordered table-active table-striped">
        <tr>
            <th>
                SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Action
            </th>
        </tr>
        @{
            var sl = 0;
            if (Model.Count() != 0)
            {
                foreach (var item in Model)
                {
                    sl++;
                    <tr>
                        <td>
                            @sl
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center text-danger" colspan="3"> Data Not Found!</td>
                </tr>
            }
        }


    </table>
</div>